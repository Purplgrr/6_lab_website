body
	width 90%
	margin auto
	font-family: 'Merriweather', serif
	max-width 1450px

.menu
	display flex
	margin auto
	font-family: 'Open Sans', sans-serif
	text-transform: uppercase
	align-items: center
	text-decoration: none;
	a
		text-decoration: none; 
		color: #dfdfdf; 
		float: left; 
		width: 96%; 
		text-align: center; 
		padding: 30px; 
		border: solid 2px #fff;
	.menu_item
		font-weight 500
		font-size 16px
		color  #4C4C4C
		padding 5px 55px
		&:hover
			border: solid 2px #dfdfdf;
			color: #000;
	.active
		color: #000;
.menu2
	display flex
	justify-content space-between
	

.logo
	max-width 70px
	padding 5px
	align-items: center
	text-decoration: none; 

.main_block
	display flex
	justify-content space-between
	margin-bottom 50px
	.main_pic
		width 100%
		position: relative;
		img
			width 100%
			position: relative
			opacity: 0.7
		h1
			position: absolute;  
			left: 50%;                       
			top: 50%;                         
			transform: translate(-50%, -50%)
			color: rgba(121, 0, 0, 0.9)
			letter-spacing 10px
			font-family: 'Open Sans', sans-serif
			font: 36px
.text
	text-align: center;
	margin auto
	width 50%
	font-size 20px

.title
	font-size 40px
	font-family: 'Open Sans', sans-serif
	color #6C0E1A
	margin-bottom 20px
	margin-top 10px
.title_m
	text-align: center;
	margin auto
	width 50%
	font-size 40px
	font-family: 'Open Sans', sans-serif
	color #6C0E1A


.lables_amount
	display flex
	justify-content center
	margin-bottom 30px
	.lable_item
		width 50%
		img
			width 100%

.graph
	display block

table 
	table-layout fixed
	width 100%
	border 2px solid #6C0E1A
	border-radius 10px
	th, td 
		padding 20px
		border 1px solid #6C0E1A
	margin-bottom 35px
	
.art_pic
	width 40%
	margin auto
	img
		width 100%
	margin-bottom 20px
	margin-top 10px

@media (max-width 1400px)
	.menu
		.menu_item
			padding 10px 50px
@media (max-width 1300px)
	.menu
		.menu_item
			padding 10px 45px

	
@media (max-width 1200px)
	.menu
		margin-top 15px
		.menu_item
			padding 10px 35px

	.text
		font-size 18px
		margin-bottom -15px

@media (max-width 1000px)
	.menu2 
		align-items center
		flex-wrap wrap
		width 50%
		.menu_item
			width 50%
			&:hover
				border: solid 2px #fff
				color: #000;

	.main_block
		margin-bottom -15px
		margin auto
		.main_pic
			width 100%
			margin-bottom 25px
		flex-direction column
	.text
		flex-direction row
		width 100%

			
	.title
		text-align center
		margin-bottom 5px
	.lables_amount
		flex-direction column
		justify-content space-between
		.lable_item
			width 40%
			margin 15px auto
	table
		font-size 11px
@media (max-width 900px)
	table
		font-size 10px
@media (max-width 850px)
	table
		font-size 9px
@media (max-width 700px)
	table
		font-size 8px
@media (max-width 600px)
	table
		font-size 7px




